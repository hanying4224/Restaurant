<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tct.restaurant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    <!-- 使用网络功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>

    <application
        android:name="com.tct.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tct.restaurant.activity.WelcomeActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tct.restaurant.activity.HomePageActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tct.restaurant.activity.RestaurantDetailActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tct.restaurant.activity.DianPingWebActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tct.restaurant.activity.LoginActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.tct.restaurant.activity.FoodInfoActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>