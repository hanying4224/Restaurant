<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/detail_toppanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e9525e" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="A112"
            android:textColor="#F8A525"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="A111"
            android:textColor="#F8A525"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detail_maincontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" >

        <LinearLayout
            android:id="@+id/main_left"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/detail_food_type"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/detail_food_type" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_middle"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:id="@+id/food_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_hanbao_md" />
        </LinearLayout>
        <View 
            android:id="@+id/main_space"
            android:layout_width="20dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/main_right"
            android:layout_width="440dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/detail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >

                    <TextView
                        android:id="@+id/food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="红烧肉"
                        android:textColor="@color/tct_black"
                        android:textSize="21.0sp" />

                    <TextView
                        android:id="@+id/food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1.5dp"
                        android:ellipsize="end"
                        android:text="38"
                        android:textColor="@color/tct_yellow"
                        android:textSize="18.0sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/food_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.5dp"
                    android:ellipsize="end"
                    android:text="score:4.5"
                    android:textColor="@color/tct_darkyellow_text"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/food_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.5dp"
                    android:text="info..."
                    android:textColor="#ff494c5b"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/food_taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口味"
                    android:textColor="#ff494c5b"
                    android:textSize="21.0sp" />

                <TextView
                    android:id="@+id/food_taste_choise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="different choise..."
                    android:textColor="#ff494c5b"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/food_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comment..."
                    android:textColor="#ff494c5b"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/detail5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <include
                    layout="@layout/plus_reduce_layout"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/food_add_to_cart"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/tct_yellow"
                    android:text="添加"
                    android:textColor="@color/tct_white"
                    android:textSize="18.0sp" />
            </RelativeLayout>
        </LinearLayout>
        
        
        <LinearLayout
            android:id="@+id/main_right_comments"
            android:layout_width="440dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >
            
            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/tct_yellow"
                android:text="添加"
                android:textSize="18.0sp" />
        </LinearLayout>
        
    </LinearLayout>

</FrameLayout>