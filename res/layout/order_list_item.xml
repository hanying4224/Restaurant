<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/timeleft_layout"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="15分种"
        android:textColor="@color/tct_gray"
        />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:gravity="center_horizontal"
            >
            <View 
                android:id="@+id/time_line1"
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/tct_yellow"
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/round_pic_yellow"
                />
            <View 
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/tct_yellow"
                />
        </LinearLayout>
    </LinearLayout>



   <RelativeLayout 
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
       >
        <View android:layout_width="match_parent"
           android:background="@color/tct_lightgray_text"
           android:layout_alignParentBottom="true"
           android:id="@+id/bottom_line"
            android:layout_height="1dp"/>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            >
            <ImageView 
                android:layout_width="130dp"
                android:layout_height="92dp"
                android:scaleType="fitXY"
                android:id="@+id/image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:layout_toRightOf="@id/image"
                android:layout_marginLeft="10dp"
                android:id="@+id/title"
                android:textColor="@color/tct_black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:layout_toRightOf="@id/title"
                android:layout_marginLeft="30dp"
                android:text="100"
                android:id="@+id/price"
                android:textColor="@color/tct_yellow"
                />
            <ImageView 
                android:id="@+id/comment_img"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment"
                android:layout_toRightOf="@id/image"
                android:layout_below="@id/title"
                android:layout_marginLeft="10dp"
                />
            <EditText 
                android:visibility="gone"
                android:id="@+id/comment_tv"
                android:layout_marginTop="30dp"
                android:layout_width="700px"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_height="wrap_content"
                android:hint="备注..."
                android:textColorHint="#cccccc"
                android:textSize="25px"
                android:background="@drawable/rectangle_gray2"
                android:layout_toRightOf="@id/image"
                android:layout_below="@id/title"
                android:layout_marginLeft="10dp"
                />
            <include 
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plus_reduce_layout"
                layout="@layout/plus_reduce_layout"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <Button 
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_gray"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/tct_black"
                android:textSize="30px"
                android:id="@+id/delete_order"
                android:text="退单"
                />
            <Button 
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/delete_order"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rectangle_gray"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/tct_black"
                android:textSize="30px"
                android:id="@+id/hurryup_order"
                android:text="催单"
                />
       </RelativeLayout>
   </RelativeLayout>

</LinearLayout>