    <RelativeLayout
        android:id="@+id/foodmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/foodmenutype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="24sp"
            android:text="type" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            
            <LinearLayout
                android:id="@+id/foodorder"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:background="@color/tct_white">
		        <TextView
		            android:id="@+id/foodorder_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="16sp"
	                android:text="多人点餐" />
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/foodsales"
	            android:layout_width="90dp"
	            android:layout_height="35dp"
	            android:layout_marginRight="25dp"
	            android:gravity="center"
                android:background="@color/tct_white">
		        <TextView
		            android:id="@+id/foodsales_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableRight="@drawable/rank_black"
		            android:textSize="16sp"
		            android:drawablePadding="2dp"
		            android:text="销量" />
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/foodscore"
	            android:layout_width="90dp"
	            android:layout_height="35dp"
	            android:gravity="center"
                android:background="@color/tct_white">
		        <TextView
		            android:id="@+id/foodscore_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:drawableRight="@drawable/rank_black"
		            android:textSize="16sp"
		            android:drawablePadding="2dp"
		            android:text="评价" />
	        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:numColumns="3" >
    </GridView>

</RelativeLayout>