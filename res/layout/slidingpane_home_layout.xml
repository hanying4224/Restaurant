        <!-- android:layout_below="@id/home_head" -->

        <RelativeLayout
            android:id="@+id/foodmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/foodmenutype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="type"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" >

                <LinearLayout
                    android:id="@+id/foodorder"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/tct_white"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/foodorder_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多人点餐"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/foodsales"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="25dp"
                    android:background="@color/tct_yellow"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/foodsales_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/rank_white"
                        android:text="销量"
                        android:textColor="@color/tct_white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/foodscore"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:background="@color/tct_white"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/foodscore_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/rank_black"
                        android:text="评价"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <GridView
            android:id="@+id/grid_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:numColumns="3" >
        </GridView>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/slidingpane_empty_width"
        android:layout_height="match_parent"
        android:background="@color/tct_gray_bg" />

</LinearLayout>