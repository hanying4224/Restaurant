<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/pay_erweima_layout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="240dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/tct_white">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="扫描二维码支付"
            android:textSize="30sp"
            android:textColor="@color/tct_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="¥218"
            android:textSize="24sp"
            android:textColor="@color/tct_yellow" />
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/erweima" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/pay_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员优惠"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/pay_tuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="使用其他优惠券"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>    

    <LinearLayout 
        android:id="@+id/pay_tuan_layout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="240dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/tct_white"
        android:visibility="gone">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="优惠券"
            android:textSize="30sp"
            android:textColor="@color/tct_black" />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tuan_meituan"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/tuan_nuomi"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/tuan_dianping"/>
        </LinearLayout>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/tct_white"
            android:background="@color/tct_yellow"
            android:textSize="22dp"
            android:text="确认"/>
        
        <TextView
            android:id="@+id/pay_erweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="扫描二维码支付"
            android:textSize="18sp"/>

    </LinearLayout>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/juice" />
</RelativeLayout>